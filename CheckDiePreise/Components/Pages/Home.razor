@page "/"
@* @rendermode InteractiveServer *@

<PageTitle>Home</PageTitle>

@if (_canConnect)
{
    <MudAlert Severity="Severity.Success">Erfolgreich mit Datenbank verbunden; @_usedDb</MudAlert>
}

else
{
    <MudAlert Severity="Severity.Error">Keine Verbindung zur Datenbank: @_usedDb, ConnectionString: @_connectionString</MudAlert>
}
