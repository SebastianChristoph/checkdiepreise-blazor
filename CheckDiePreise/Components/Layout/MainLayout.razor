@inherits LayoutComponentBase
@inject ISnackbar Snackbar

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@(() => OpenDrawer(Anchor.Start))" />

        <MudText Typo="Typo.h6">Rezepte</MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="@open" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary"
               Style="min-height: 100vh;">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>

        <NavMenu />

    </MudDrawer>

    <MudMainContent Class="pt-16 px-16 mt-8">

        @Body

    </MudMainContent>
</MudLayout>


@code {
    bool open;

    Anchor anchor;



    void OpenDrawer(Anchor anchor)

    {

        open = true;

        this.anchor = anchor;

    }
}
